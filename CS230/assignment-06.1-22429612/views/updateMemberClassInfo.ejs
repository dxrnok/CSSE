<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Update Member Class Information</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div id="form">
            <h1>UPDATE MEMBER CLASS INFORMATION</h1>
            <form action="/update/memberClassInfo" method="post" onsubmit="return checkClassIDs()">
                <label for="userID">User ID: </label>
                <input type="number" id="userID" name ='userID' min="1" required>
                <label for="classID">Class ID: </label>
                <input type="text" id="classID" name ='classID' pattern="[1-9]+(,[1-9]+)*" placeholder="(e.g. 2,3,4)" required>
                <br>
                <button class ='createUserB' name="button" value="updateMemberClass" type="submit">Update Member Class Information</button>
            </form>
            <form action="/update/memberClassInfo" method="post">
                <button class ='createUserB' style="margin-top: 10px;"name="button" value="exampleB" type="submit">Update Random Member Class Information</button>
            </form>
        </div>  

        <script>   
            function checkClassIDs() {
                var classIDInput = document.getElementById('classID').value;
                var classIDs = classIDInput.split(',');

                for(let i = 0; i < classIDs.length; i++){
                    for(let j = i+1; j < classIDs.length; j++){
                        if(classIDs[i] === classIDs[j]){
                            alert('Please ensure that every input is unique.');
                            return false;
                        }
                    }
                }
                return true;
            }
        </script>
    </body>
</html>
