<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>User Management Application</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div id="createUser">
            <h1>Create User</h1>
            <form action="/create" method="post">
                <label for="title">Title:</label>
                <select name="title" id="title">
                    <option value="mx">Mx</option>
                    <option value="ms">Ms</option>
                    <option value="mr">Mr</option>
                    <option value="mrs">Mrs</option>
                    <option value="miss">Miss</option>
                    <option value="dr">Dr</option>
                    <option value="other">Other (Specify)</option>
                </select>
                <input style='visibility: hidden'; type="text" id="otherInput" required>
                
                <label for="fname">First Names:</label>
                <input type="text" id="fname" name ='fname' required>
                <label for="sname">Surname:</label>
                <input type="text" id="sname" name ='sname' required>
                <label for="mobileNO">Mobile Number:</label>
                <input type="text" id="mobileNO" name ='mobile' required>
                <label for="email">Email:</label>
                <input type="email" id="email" name ='email'>
                <label for="address1">Address Line 1:</label>
                <input type="text" id="address1" name ='address1' required>
                <label for="address2">Address Line 2:</label>
                <input type="text" id="address2" name ='address2'>
                <label for="town">Town:</label>
                <input type="text" id="town" name ='town' required>
                <label for="city">City:</label>
                <input type="text" id="city" name ='city' required>
                <label for="eircode">Eircode:</label>
                <input type="text" id="eircode" name ='eircode'>
                <label for="ship">Shipping Address is the same as home address</label>
                <input type="checkbox" id="ship" name="ship" value="ship">
                <br>
                <button id ='createButton' style="visibility: hidden" type="submit">Create User</button>
            </form>
        </div>

        <script>    
            const inputs = document.querySelectorAll('input');
            const title = document.querySelectorAll("#title");
            const createButton = document.getElementById('createButton');

            title.forEach((element) => {
                element.addEventListener('change', () => {
                    const otherInputContainer = document.getElementById("otherInput");
                    if (element.value === "other") {
                        otherInputContainer.innerHTML = "";
                        otherInputContainer.style.visibility = "visible";
                    } else {
                        otherInputContainer.innerHTML = "";
                        otherInputContainer.style.visibility = "hidden";
                    }
                });
            });
            inputs.forEach((element) => {
                element.addEventListener('input', () => {
                    let filled = true;
                  
                    inputs.forEach(element => {
                        otherInput = checkOther(element);
                        if (element.value.trim().length < 1) {
                            filled = false;
                        }
                    });
                    if (filled) {
                        createButton.style.visibility = 'visible';
                    } else {
                        createButton.style.visibility = 'hidden';
                    }
                });
            });
            
            function checkOther(element){
                return element.value === 'other';
            }
        </script>
    </body>
</html>
